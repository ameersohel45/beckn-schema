{
  "@context": {
    "@vocab": "https://becknprotocol.io/schema/",
    "beckn": "https://becknprotocol.io/schema/",
    "schema": "https://schema.org/",
    "rdf": "http://www.w3.org/1999/02/22-rdf-syntax-ns#",
    "rdfs": "http://www.w3.org/2000/01/rdf-schema#",
    "owl": "http://www.w3.org/2002/07/owl#"
  },
  "@id": "https://becknprotocol.io/schema/Payment",
  "@type": "owl:Class",
  "rdfs:label": "Payment",
  "rdfs:comment": "Defines payment information for retail items including type, status, and amount",
  "rdfs:subClassOf": "owl:Thing",
  "rdfs:isDefinedBy": "https://becknprotocol.io/schema/",
  "owl:equivalentClass": {
    "@type": "owl:Class",
    "owl:intersectionOf": [
      "owl:Thing",
      {
        "@id": "beckn:id",
        "rdfs:label": "Payment ID",
        "rdfs:comment": "Unique identifier for the payment transaction",
        "owl:equivalentProperty": { 
          "@id": "schema:identifier" 
        }
      },
      {
        "@type": "owl:Restriction",
        "owl:onProperty": {
          "@id": "beckn:type",
          "rdfs:label": "Payment Type",
          "rdfs:comment": "The type of payment (e.g., prepaid, postpaid, COD, online)"
        },
        "owl:allValuesFrom": "schema:Text"
      },
      {
        "@type": "owl:Restriction",
        "owl:onProperty": {
          "@id": "beckn:status",
          "rdfs:label": "Payment Status",
          "rdfs:comment": "Current status of the payment (e.g., pending, completed, failed)"
        },
        "owl:allValuesFrom": "schema:Text"
      },
      {
        "@type": "owl:Restriction",
        "owl:onProperty": {
          "@id": "beckn:amount",
          "rdfs:label": "Payment Amount",
          "rdfs:comment": "The amount to be paid with currency and pricing details"
        },
        "owl:allValuesFrom": "beckn:Price"
      },
      {
        "@type": "owl:Restriction",
        "owl:onProperty": {
          "@id": "beckn:method",
          "rdfs:label": "Payment Method",
          "rdfs:comment": "The method used for payment (e.g., credit card, debit card, UPI, net banking)"
        },
        "owl:allValuesFrom": "schema:Text"
      },
      {
        "@type": "owl:Restriction",
        "owl:onProperty": {
          "@id": "beckn:currency",
          "rdfs:label": "Payment Currency",
          "rdfs:comment": "The currency in which the payment is made"
        },
        "owl:allValuesFrom": "schema:Text"
      },
      {
        "@type": "owl:Restriction",
        "owl:onProperty": {
          "@id": "beckn:transactionId",
          "rdfs:label": "Transaction ID",
          "rdfs:comment": "Unique transaction identifier from the payment gateway or bank"
        },
        "owl:allValuesFrom": "schema:Text"
      },
      {
        "@type": "owl:Restriction",
        "owl:onProperty": {
          "@id": "beckn:timestamp",
          "rdfs:label": "Payment Timestamp",
          "rdfs:comment": "The date and time when the payment was processed"
        },
        "owl:allValuesFrom": "schema:DateTime"
      }
    ]
  }
}
