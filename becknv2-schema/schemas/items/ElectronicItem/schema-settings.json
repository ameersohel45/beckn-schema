  "piiHints": {
    "electronicItemId": {
      "isPii": false,
      "maskingLogic": null,
      "privacyLevel": "public"
    },
    "price": {
      "isPii": false,
      "maskingLogic": null,
      "privacyLevel": "public"
    },
    "quantity": {
      "isPii": false,
      "maskingLogic": null,
      "privacyLevel": "public"
    },
    "brand": {
      "isPii": false,
      "maskingLogic": null,
      "privacyLevel": "public"
    },
    "sku": {
      "isPii": false,
      "maskingLogic": null,
      "privacyLevel": "public"
    },
    "shippingInfo": {
      "isPii": true,
      "maskingLogic": "address-masking",
      "privacyLevel": "restricted",
      "maskingRules": {
        "address": "partial-mask",
        "phone": "full-mask",
        "email": "partial-mask"
      }
    },
    "fulfillments": {
      "isPii": false,
      "maskingLogic": null,
      "privacyLevel": "public"
    },
    "payments": {
      "isPii": true,
      "maskingLogic": "payment-masking",
      "privacyLevel": "restricted",
      "maskingRules": {
        "cardNumber": "last-four-digits",
        "cvv": "full-mask",
        "expiryDate": "partial-mask"
      }
    }
  },

