{
  "itemType": "GroceryItem",
  "version": "1.0.0",
  "description": "Validation rules for GroceryItem schema",
  
  "validationSchema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["groceryItemId", "price", "quantity"],
    "properties": {
      "groceryItemId": {
        "type": "string",
        "minLength": 1,
        "maxLength": 255,
        "pattern": "^[a-zA-Z0-9_-]+$",
        "description": "Unique identifier for the grocery item"
      },
      "price": {
        "type": "object",
        "required": ["amount", "currency"],
        "properties": {
          "amount": {
            "type": "number",
            "minimum": 0,
            "description": "Price amount"
          },
          "currency": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3,
            "pattern": "^[A-Z]{3}$",
            "description": "ISO 4217 currency code"
          }
        },
        "additionalProperties": false
      },
      "quantity": {
        "type": "object",
        "required": ["count"],
        "properties": {
          "count": {
            "type": "number",
            "minimum": 1,
            "description": "Quantity count"
          },
          "measure": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number",
                "minimum": 0
              },
              "unit": {
                "type": "string",
                "enum": ["kg", "g", "l", "ml", "piece", "pack", "bottle", "can"]
              }
            }
          }
        }
      },
      "brand": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "logo": {
            "type": "string",
            "format": "uri"
          }
        }
      },
      "sku": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100,
        "pattern": "^[A-Z0-9_-]+$"
      },
      "expiryDate": {
        "type": "string",
        "format": "date",
        "description": "Expiration date in YYYY-MM-DD format"
      },
      "storageInstructions": {
        "type": "string",
        "maxLength": 500,
        "description": "Storage and handling instructions"
      },
      "nutritionalInfo": {
        "type": "object",
        "properties": {
          "calories": {
            "type": "number",
            "minimum": 0
          },
          "protein": {
            "type": "number",
            "minimum": 0
          },
          "carbohydrates": {
            "type": "number",
            "minimum": 0
          },
          "fat": {
            "type": "number",
            "minimum": 0
          },
          "fiber": {
            "type": "number",
            "minimum": 0
          },
          "sugar": {
            "type": "number",
            "minimum": 0
          },
          "sodium": {
            "type": "number",
            "minimum": 0
          },
          "unit": {
            "type": "string",
            "enum": ["per 100g", "per serving", "per piece"]
          }
        }
      },
      "organicCertification": {
        "type": "string",
        "maxLength": 200,
        "description": "Organic certification details"
      },
      "shippingInfo": {
        "type": "object",
        "properties": {
          "weight": {
            "type": "object",
            "properties": {
              "value": {
                "type": "number",
                "minimum": 0
              },
              "unit": {
                "type": "string",
                "enum": ["kg", "g", "lb", "oz"]
              }
            }
          },
          "dimensions": {
            "type": "object",
            "properties": {
              "length": {
                "type": "number",
                "minimum": 0
              },
              "width": {
                "type": "number",
                "minimum": 0
              },
              "height": {
                "type": "number",
                "minimum": 0
              },
              "unit": {
                "type": "string",
                "enum": ["cm", "m", "inch", "ft"]
              }
            }
          },
          "temperature": {
            "type": "object",
            "properties": {
              "min": {
                "type": "number"
              },
              "max": {
                "type": "number"
              },
              "unit": {
                "type": "string",
                "enum": ["celsius", "fahrenheit"]
              }
            }
          }
        }
      },
      "fulfillments": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["delivery", "pickup", "self-pickup"]
            },
            "provider": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "payments": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["online", "cod", "card", "upi", "wallet"]
            },
            "provider": {
              "type": "string"
            }
          }
        }
      },
      "addOnIds": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "cancellationTerms": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "policy": {
              "type": "string"
            },
            "timeLimit": {
              "type": "string"
            }
          }
        }
      },
      "refundTerms": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "policy": {
              "type": "string"
            },
            "timeLimit": {
              "type": "string"
            }
          }
        }
      },
      "replacementTerms": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "policy": {
              "type": "string"
            },
            "timeLimit": {
              "type": "string"
            }
          }
        }
      },
      "returnTerms": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "policy": {
              "type": "string"
            },
            "timeLimit": {
              "type": "string"
            }
          }
        }
      }
    },
    "additionalProperties": false
  },

  "businessRules": {
    "priceValidation": {
      "rule": "Price amount must be greater than 0",
      "condition": "price.amount > 0"
    },
    "quantityValidation": {
      "rule": "Quantity count must be at least 1",
      "condition": "quantity.count >= 1"
    },
    "skuFormat": {
      "rule": "SKU must be alphanumeric with hyphens and underscores only",
      "pattern": "^[A-Z0-9_-]+$"
    },
    "currencyFormat": {
      "rule": "Currency must be a valid 3-letter ISO code",
      "pattern": "^[A-Z]{3}$"
    },
    "expiryDateValidation": {
      "rule": "Expiry date must be in the future",
      "condition": "expiryDate > currentDate"
    },
    "temperatureValidation": {
      "rule": "If temperature is specified, min must be less than max",
      "condition": "!shippingInfo.temperature || shippingInfo.temperature.min < shippingInfo.temperature.max"
    },
    "nutritionalValidation": {
      "rule": "Nutritional values must be non-negative",
      "condition": "!nutritionalInfo || (nutritionalInfo.calories >= 0 && nutritionalInfo.protein >= 0 && nutritionalInfo.carbohydrates >= 0 && nutritionalInfo.fat >= 0)"
    }
  }
}
