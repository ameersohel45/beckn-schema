            { "label": "Weight", "value": "{{smartphone:weight}} g", "itemprop": "smartphone:weight" },
            { "label": "Dimensions", "value": "{{smartphone:dimensions}}", "itemprop": "smartphone:dimensions" }
          ]
        }
      ]
    }
  },
  "microdata": {
    "itemtype": "https://becknprotocol.io/schema/SmartphoneItem",
    "properties": {
      "smartphoneItemId": "smartphone:smartphoneItemId",
      "processor": "smartphone:processor",
      "ram": "smartphone:ram",
      "storage": "smartphone:storage",
      "operatingSystem": "smartphone:operatingSystem",
      "screenSize": "smartphone:screenSize",
      "resolution": "smartphone:resolution",
      "camera": "smartphone:camera",
      "battery": "smartphone:battery",
      "color": "smartphone:color"
