{
  "schema": {
    "name": "SmartphoneItem",
    "version": "1.0.0",
    "description": "HTML rendering templates and microdata generation for SmartphoneItem"
  },
  "templates": {
    "card": {
      "container": {
        "tag": "div",
        "attributes": {
          "class": "smartphone-card",
          "itemscope": "",
          "itemtype": "https://becknprotocol.io/schema/SmartphoneItem"
        }
      },
      "header": {
        "tag": "div",
        "attributes": { "class": "card-header" },
        "content": [
          {
            "tag": "h3",
            "attributes": { "itemprop": "schema:name" },
            "content": "{{schema:name}}"
          },
          {
            "tag": "div",
            "attributes": { "class": "smartphone-id" },
            "content": "ID: {{smartphone:smartphoneItemId}}"
          }
        ]
      },
      "specifications": {
        "tag": "div",
        "attributes": { "class": "specs-grid" },
        "content": [
          {
            "tag": "div",
            "attributes": { "class": "spec-item" },
            "content": [
              { "tag": "span", "attributes": { "class": "label" }, "content": "Processor:" },
              { "tag": "span", "attributes": { "itemprop": "smartphone:processor" }, "content": "{{smartphone:processor}}" }
            ]
          },
          {
            "tag": "div",
            "attributes": { "class": "spec-item" },
            "content": [
              { "tag": "span", "attributes": { "class": "label" }, "content": "RAM:" },
              { "tag": "span", "attributes": { "itemprop": "smartphone:ram" }, "content": "{{smartphone:ram}} GB" }
            ]
          },
          {
            "tag": "div",
            "attributes": { "class": "spec-item" },
            "content": [
              { "tag": "span", "attributes": { "class": "label" }, "content": "Storage:" },
              { "tag": "span", "attributes": { "itemprop": "smartphone:storage" }, "content": "{{smartphone:storage}} GB" }
            ]
          },
          {
            "tag": "div",
            "attributes": { "class": "spec-item" },
            "content": [
              { "tag": "span", "attributes": { "class": "label" }, "content": "OS:" },
              { "tag": "span", "attributes": { "itemprop": "smartphone:operatingSystem" }, "content": "{{smartphone:operatingSystem}}" }
            ]
          },
          {
            "tag": "div",
            "attributes": { "class": "spec-item" },
            "content": [
              { "tag": "span", "attributes": { "class": "label" }, "content": "Screen:" },
              { "tag": "span", "attributes": { "itemprop": "smartphone:screenSize" }, "content": "{{smartphone:screenSize}} inches" }
            ]
          },
          {
            "tag": "div",
            "attributes": { "class": "spec-item" },
            "content": [
              { "tag": "span", "attributes": { "class": "label" }, "content": "Resolution:" },
              { "tag": "span", "attributes": { "itemprop": "smartphone:resolution" }, "content": "{{smartphone:resolution}}" }
            ]
          }
        ]
      },
      "features": {
        "tag": "div",
        "attributes": { "class": "features-list" },
        "content": [
          {
            "tag": "div",
            "attributes": { "class": "feature-item" },
            "content": [
              { "tag": "span", "attributes": { "class": "icon" }, "content": "ðŸ“±" },
              { "tag": "span", "attributes": { "class": "text" }, "content": "{{smartphone:networkType}}" }
            ]
          },
          {
            "tag": "div",
            "attributes": { "class": "feature-item" },
            "content": [
              { "tag": "span", "attributes": { "class": "icon" }, "content": "ðŸ”‹" },
              { "tag": "span", "attributes": { "class": "text" }, "content": "{{smartphone:battery}} mAh" }
            ]
          },
          {
            "tag": "div",
            "attributes": { "class": "feature-item" },
            "content": [
              { "tag": "span", "attributes": { "class": "icon" }, "content": "ðŸ“·" },
              { "tag": "span", "attributes": { "class": "text" }, "content": "{{smartphone:camera}}" }
            ]
          }
        ]
      },
      "actions": {
        "tag": "div",
        "attributes": { "class": "card-actions" },
        "content": [
          {
            "tag": "button",
            "attributes": { "class": "btn btn-primary", "onclick": "viewDetails('{{smartphone:smartphoneItemId}}')" },
            "content": "View Details"
          },
          {
            "tag": "button",
            "attributes": { "class": "btn btn-secondary", "onclick": "addToCart('{{smartphone:smartphoneItemId}}')" },
            "content": "Add to Cart"
          }
        ]
      }
    },
    "detail": {
      "container": {
        "tag": "div",
        "attributes": {
          "class": "smartphone-detail",
          "itemscope": "",
          "itemtype": "https://becknprotocol.io/schema/SmartphoneItem"
